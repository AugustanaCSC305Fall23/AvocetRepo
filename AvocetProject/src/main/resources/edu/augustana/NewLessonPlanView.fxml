<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.NewLessonPlanController">
    <top>
        <GridPane prefHeight="59.0" prefWidth="600.0" style="-fx-background-color: FF6E4E;" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
                    <children>
                        <Button mnemonicParsing="false" styleClass="button1" stylesheets="@style.css" text="Open" textFill="#ff6e4e">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" styleClass="button1" stylesheets="@style.css" text="Save" textFill="#ff6e4e">
                            <HBox.margin>
                                <Insets bottom="10.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <Label text="GymnastPro" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="23.0" />
                    </font>
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </GridPane.margin>
                </Label>
            </children>
        </GridPane>
    </top>
    <left>
        <VBox fx:id="cardsGridVbox" prefHeight="400.0" style="-fx-background-color: FFF2EF;" BorderPane.alignment="CENTER">
            <children>
            <TextField fx:id="searchBox" onKeyTyped="#searchFunction" promptText="Search" />
            <HBox prefHeight="28.0" prefWidth="322.0">
               <children>
                  <ComboBox fx:id="filteredBox" onAction="#eventFiltering" prefHeight="26.0" prefWidth="106.0" promptText="Filter Events" />
                  <ComboBox prefHeight="25.0" prefWidth="112.0" promptText="Filter Gender" />
                  <ComboBox prefHeight="25.0" prefWidth="105.0" promptText="Filter Level" />
               </children>
            </HBox>
                <ScrollPane fx:id="cardsGridScrollPane">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                    <content>
                        <GridPane fx:id="cardsGrid">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                        </GridPane>
                    </content>
                </ScrollPane>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </left>
    <center>
        <VBox prefHeight="400.0" prefWidth="380.0" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="56.0" prefWidth="315.0">
                    <children>
                        <Label text="Lesson Plan Name:">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </Label>
                        <TextField>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
            <ScrollPane>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <content>
                  <GridPane fx:id="lessonPlanGrid">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                  </GridPane>
               </content>
            </ScrollPane>
            <Button fx:id="addEventButton" mnemonicParsing="false" onAction="#addLessonPlan" text="Add Event" />
            </children>
        </VBox>
    </center>
</BorderPane>
