<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.WelcomeScreenController">
   <center>
      <VBox alignment="CENTER" prefHeight="338.0" prefWidth="502.0" spacing="20.0" styleClass="welcomeScreen" stylesheets="@style.css">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="Welcome to GymnastPro" textFill="WHITE">
               <font>
                  <Font name="Arial Black" size="33.0" />
               </font>
            </Label>
            <Button fx:id="primaryButton" mnemonicParsing="false" onAction="#switchToMainScreen" styleClass="buttonOrange" stylesheets="@style.css" text="Create A Lesson Plan" textFill="WHITE">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets top="100.0" />
               </VBox.margin></Button>
            <Button fx:id="aboutButton" mnemonicParsing="false" onAction="#switchToAboutPage" text="About" />
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox alignment="CENTER" prefHeight="74.0" prefWidth="502.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
